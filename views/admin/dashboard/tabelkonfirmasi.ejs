<div class="col-sm-8">
  <div class="box">
    <!-- /.box-header -->
    <div class="box-header">
      <th style="width: 50%;">Konfirmasi User</th>
      <th class="box-title" style="margin-left: 80%;">
        <!-- <button class="btn btn-success">Tambah</button> -->
      </th>
    </div>

    <div class="box-body" style="height: 224px; overflow-y: scroll; overflow-x: scroll;">

      <table id="pengembang1" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>No</th>
            <th>Nama</th>
            <th>Status</th>
            <th>Aksi</th>

          </tr>
        </thead>
        <div class="table-body-wrapper" style="position: relative; overflow: visible;">
          <tbody>
            <% for (let i = 0; i < pengembang1.length; i++ ) { %>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= pengembang1[i].nama %></td>
              <td>
                <span class="pull-right-container">
                  <% if(pengembang1[i].status === 2) { %>
                  <small class="label pull-center bg-yellow">"Meminta konfirmasi"</small>
                  <% } else{ %>
                  <small class="label pull-center bg-green">"aktif</small>
                  <% }  %>
                </span>
              </td>
              <td>
                <% if(pengembang1[i].status === 2) { %>
                <button class="btn btn-success btn-sm" onclick="update_status(`<%= pengembang1[i].id %>`)"
                  data-id="<%= pengembang1[i].id %>">
                  <span class="glyphicon glyphicon-user"></span>
                  konfirmasi
                </button>
                <% } else { %>
                <button class="btn btn-warning btn-sm" onclick="update_status(`<%= pengembang1[i].id %>`)"
                  data-id="<%= pengembang1[i].id %>">
                  <span class="glyphicon glyphicon-user"></span>
                  batalkan
                </button>
                <% } %>
              </td>
              </td>
            </tr>
            <% } %>
          </tbody>
        </div>
      </table>
    </div>
    <!-- /.box-body -->
  </div>
  <!-- /.box -->
</div>
<script>
  function update_status(id) {
    let idPengembang = id
    swal({
      title: "Konfirmasi User ?",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    }).then(willDelete => {
      if (willDelete) {
        swal({
          title: "Success",
          text: "Success User Terkonfirmasi",
          icon: "success",
          buttons: false,
          timer: 2000
        }).then(suksesChange => {
          window.location.assign(`/admin/kon/${idPengembang}`);
        })
      }
    })
  }
</script>