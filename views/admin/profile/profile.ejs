<%- include ../../partials/admin_layout/header.ejs %>
<%- include ../../partials/admin_layout/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Setting Profile
    </h1>
    <ol class="breadcrumb">
      <li><a href="dashboard"><i class="fa fa-dashboard"></i> Dashboard</a></li>
      <li class="active">Profile</li>
    </ol>
    <% if(alert.message != '') { %>
    <br>
    <div class="alert alert-<%= alert.status %>" style="text-align: center;">
      <strong><%= alert.message %></strong>
    </div>
    <% } %>
  </section>

  <!-- Main content -->
  <section class="content">

    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <!-- /.box-header -->
          <div class="box-header">
            <th style="width: 50%;">Setting Profile</th>
            <th class="box-title" style="margin-left: 80%;">
              <!-- <button class="btn btn-success">Tambah</button> -->
            </th>
          </div>

          <div class="box-body" style="height: 370px; overflow-y: scroll; overflow-x: scroll;">
            <form action="/admin/profile/<%= user.id %>" method="post" enctype="multipart/form-data">
              <input type="hidden" class="id" required name="id" value="<%= user.id %>">
              <div class="form-group">
                <label>Nama :</label>
                <input type="text" id="name" name="name" class="form-control name" placeholder="Masukan Nama"
                  value="<%= user.name %>" required>
              </div>
              <div class="form-group">
                <label>Email :</label>
                <input type="text" id="email" name="email" class="form-control email" placeholder="Masukan Email"
                  value="<%= user.email %>" required>
              </div>
              <div class="form-group">
                <label>No Telp :</label>
                <input type="text" id="notelp" name="notelp" class="form-control notelp" placeholder="Masukan No Telp"
                  value="<%= user.notelp %>" required>
              </div>
              <div class="form-group">
                <input type="file" id="inputFotoEdit" onchange="return validasiFileEdit()" name="foto"
                  class="form-control" value="<%= user.image %>">
              </div>
              <div class="form-group">
                <label>Password Lama :</label>
                <input type="text" id="oldpassword" name="oldpassword" class="form-control oldpassword"
                  placeholder="Masukan Password lama Anda" required>
              </div>
              <div class="form-group">
                <label>New Password :</label>
                <input type="text" id="newpassword" name="newpassword" class="form-control newpassword"
                  placeholder="Masukan Password Baru" required>
              </div>
              <div class="form-group">
                <label>Repeat Password :</label>
                <input type="text" id="repeatpassword" name="repeatpassword" class="form-control repeatpassword"
                  placeholder="Masukan repeatpassword" required>
              </div>
              <button type="submit" class="btn btn-primary">Simpan</button>
          </div>
          </form>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>
<%- include ../../partials/admin_layout/footer.ejs %>